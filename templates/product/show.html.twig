{# héritage du fichier de base twig header et footer #}
{% extends 'base.html.twig' %}
{# balise title #}
{% block title %}{{ product.libelle }}{% endblock %}

{% block body %}
    <div class="container text-center">
        <div class="col-sm-12 col-lg-9">
            {# breadcrumb #}
            <ol class="breadcrumb_stack">
                <li><a href="{{path('home')}}" title="Accueil">Accueil ></a></li>
                <li><a href="{{path('catalog')}}" title="formations">Catalogue ></a></li>
                <li><a href="{{ path('product_show', {'id': product.id}) }}" title="formations">{{ product.libelle }}</a></li>
            </ol>

        </div>
        {# Présentation sous forme de cards #}
        <div class="back mt-2 mb-4" >
            <div class="card_show">
                {# Image de la card #}

            <div class="card_show">
                <div class="col-12 text-center">
                    {% if product.id >= 10 %}
                        <h1><span class="badge_product_new">
                            <svg xmlns="http://www.w3.org/2000/svg" width="33" height="31.395" viewBox="0 0 33 31.395">
                                <path id="Icon_material-new-releases" data-name="Icon material-new-releases" d="M34.5,18l-3.66-4.17.51-5.52L25.935,7.08,23.1,2.31,18,4.5,12.9,2.31,10.065,7.08,4.65,8.3l.51,5.52L1.5,18l3.66,4.17L4.65,27.7l5.415,1.23L12.9,33.7,18,31.5l5.1,2.19,2.835-4.77,5.415-1.23-.51-5.52Zm-15,7.5h-3v-3h3Zm0-6h-3v-9h3Z" transform="translate(-1.5 -2.31)" fill="#fff"/>
                            </svg>

                            Nouveau produit </span></h1>
                    {% endif %}
                </div>

                <p><img src="{{ product.picture }}"></p>
                <div class="card-body">
                    {# Titre de la card #}
                    <h5 class="card-title">{{ product.libelle }}</h5>
                    {# Prix de la card #}
                    <p class="card-text">{{ product.price }}€</p>
                    {# texte de la card #}
                    <p class="card-text">Il reste {{ product.stock }} exemplaires</p>
                    <div class="custom-control custom-checkbox">
                        {# Option emballage #}
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Emballage cadeau ? (option gratuite)</label>
                    </div>
                    {# Bouton ajout au panier #}
                    <a href="{{ path('cart_add',{'id':product.id}) }}" class="myButton mt-3 mb-3" id="add_basket">Ajouter au panier</a>
                    <p>
                        {# Lien description produit #}
                        <a class="link_show_product" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Description 
                            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 45 45">
                                <path id="Icon_awesome-arrow-down" data-name="Icon awesome-arrow-down" d="M42.383,21.383l2.288,2.23a2.358,2.358,0,0,1,0,3.4L24.649,46.542a2.508,2.508,0,0,1-3.493,0L1.124,27.017a2.358,2.358,0,0,1,0-3.4l2.288-2.23a2.521,2.521,0,0,1,3.534.04l11.83,12.1V4.66a2.437,2.437,0,0,1,2.473-2.41h3.3a2.437,2.437,0,0,1,2.473,2.41V33.526l11.83-12.1A2.5,2.5,0,0,1,42.383,21.383Z" transform="translate(-0.397 -2.25)"/>
                            </svg>
                        </a>
                    </p>
                    <div class="row">
                        <div class="col-12">
                            <div class="collapse mb-3" id="multiCollapseExample1">
                                {# description de la card #}
                                <div class="card card-body">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus gravida pharetra laoreet. Pellentesque n
                                    on scelerisque tortor. Vivamus sit amet velit eget ex porta molestie sed at eros. Sed vulputate eget odio e
                                    u consectetur. Etiam consequat odio non mauris pharetra, quis tempus elit consequat. Integer efficitur odi
                                    o eu consectetur congue. Pellentesque et sem quis lacus fringilla mattis. Cras purus libero, cursus at fe
                                    ugiat ut, vehicula id tortor. In sagittis varius risus vel elementum.

                                    Sed quis lectus auctor, gravida augue quis, condimentum est. Donec eu hendrerit mi. Praesen
                                    t eget placerat nisi, sit amet iaculis mauris. Phasellus dictum libero sit amet mollis rhoncus. Nulla vene vehi
                                    {% for produit in monthlysales %}
                                        {{ produit.Total }}
                                    {{ produit.ProductName }} {{ produit.Mois }}
                                        {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {# Information d'envoi et de paiement #}
