<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('Vous êtes sur le point de supprimer ce produit, êtes-vous certains ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger  mt-5">Supprimer ce produit</button>
</form>
