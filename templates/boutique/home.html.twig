{# empty Twig template #}
{% extends 'base.html.twig' %}


{% block body %}

    <div class="text-center mt-5">

        <h1>En manque d'idée originale pour vos décorations ?<br>
            <span id="slogan">Optez pour StackOrigami !</span></h1>
                    </div>

                    <div class="news_products mt-5 ">
                        <div class="css-typing text-center">

                        <p class="mt-8"><mark>Nouveautés !</mark></p>
                        </div>

                    </div>

                    <!-- Swiper -->
                    <div class="swiper-container ">
                        <!-- Logo panier -->
                        <div class="parallax-bg" data-swiper-parallax="-23%"></div>
                        <div class="swiper-wrapper">

                            {% for product in products %}
                                <div class="swiper-slide">
                                    <img src="{{ product.picture }}">
                                    <div class="col-sm-12 col-lg-5 contain_white pb-2">

                                        <div class="title" data-swiper-parallax="-300">
                                            <h2>{{ product.libelle }}</h2>
                                        </div>
                                        <div class="text" data-swiper-parallax="-100">
                                            <p>
                                                {{ product.description }}
                                            </p>
                                            <p class="font-weight-bold">25€</p>
                                            <a href="{{ path('cart_add',{'id':product.id}) }}" class="myButton">Ajouter au panier</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                        <!-- Add Pagination -->
                        <div class="swiper-pagination swiper-pagination-white"></div>
                        <!-- Add Navigation -->
                        <div class="swiper-button-prev swiper-button-white"></div>
                        <div class="swiper-button-next swiper-button-white"></div>
                    </div>


                    <div class="category text-center col-12">

                        <h2>Nos catégories</h2>
                        <div class="row">

                            {% for product_category in product_categories %}
                                <div class="col-sm-12 col-lg-4 text-center">
                                    <a href="">
                                        <img class="saler lien_card" height="200" width="250" src="{{ product_category.picture }}">

                                        <p>{{ product_category.name }}</p>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="most_sale text-center col-12 mt-5">
                        <div class="row">
                            <h2 class="col-6" >Nos meilleures ventes</h2>
                            <h2 class="col-6">Nos partenaires</h2>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-lg-3">
                            <div id="div_chart" class="most_sale col-6 mt-5"></div>
                            </div>
                            </div>
                            <div class="row">
                                <a href="">
                                    <img class="saler lien_card" src="images/51IE-V8GE4L-removebg-preview.svg')">
                                </a>
                                <p>PandaStock</p>
                                <p class="font-weight-bold">25€</p>
                            </div>
                            <div class="col-sm-12 col-lg-3">
                                <a href="">
                                    <img class="saler lien_card" src="{{ asset('images/hqdefault-removebg-preview.svg') }}">
                                </a>
                                <p>OiseauStock</p>
                                <p class="font-weight-bold">25€</p>
                            </div>
                            {% for partner in partners %}
                                <div class="col-sm-12 col-lg-2">
                                    <a href="">
                                        <img class="saler lien_card" height="200" width="200" src="{{ partner.picture }}">

                                    <p class="font-weight-bold">Fnac</p>   </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
    </div>
                    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.css" />
                    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css" />

                    <script src="https://unpkg.com/swiper/js/swiper.js"></script>
                    <script src="https://unpkg.com/swiper/js/swiper.min.js"></script>
                    <!-- Swiper JS -->
                    <script src="../package/js/swiper.min.js"></script>
                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                    <script type="text/javascript">
                        {{ gc_draw(chart, 'div_chart') }}
                    </script>
                    <script src="{{ asset('js/swiperScript.js') }}"></script>

                {% endblock %}

