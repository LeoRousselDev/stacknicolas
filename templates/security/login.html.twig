{% extends 'base.html.twig' %}

{% block body %}
{% if app.user %}
    <p>Vous êtes déjà connecté</p>
    <a href="{{ path('profil') }}" class="btn-profil mt-2 mb-4">Profil</a>
{% else %}

    <div class="container text-center">

        <h1>Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="_username" >Adresse e-mail</label>
                <input class="form-control" require name="_username" type="text" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="_username" >Mot de passe</label>
                <input class="form-control" require name="_password" type="password" placeholder="Mot de passe">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-profil mt-2 mb-4">Connexion</button>
            </div>

        </form>
            <p> Pas de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous</p>
    </div>
{% endif %}

{% endblock %}
