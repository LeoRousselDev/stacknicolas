{% extends 'base.html.twig' %}
{# balise title #}
{% block title %}Contact index{% endblock %}
{# balise body #}
{% block body %}
    <h1>Contact index</h1>
    {# Tableau #}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mail</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Date_send</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.mail }}</td>
                    <td>{{ contact.subject }}</td>
                    <td>{{ contact.message }}</td>
                    <td>{{ contact.dateSend ? contact.dateSend|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                        <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
