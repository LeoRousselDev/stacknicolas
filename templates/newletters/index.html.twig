{% extends 'base.html.twig' %}

{% block title %}Newletters index{% endblock %}

{% block body %}
    <h1>Newletters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newletter in newletters %}
            <tr>
                <td>{{ newletter.id }}</td>
                <td>{{ newletter.email }}</td>
                <td>{{ newletter.date ? newletter.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('newletters_show', {'id': newletter.id}) }}">show</a>
                    <a href="{{ path('newletters_edit', {'id': newletter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('newletters_new') }}">Create new</a>
{% endblock %}
